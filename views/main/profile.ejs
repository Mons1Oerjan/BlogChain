<% include ../partials/header %>

    <body> 
        <div class="header">
            <h2>Your Profile</h2>
        </div>
        <div class="row">
          <!--<div class="leftcolumn">
            <div class="posts">
            <h3>Your Blog Posts</h3>
          </div>-->

          <div class="midcolumn">
            <div class="about">
              <h3>About Me</h3>
              <h5>Title description, Dec 7, 2017</h5> 
              <p>Some text..</p>
            </div>
          
          <div class="rightcolumn">
            <div class="card">
              <h2>User Info</h2>
                <p>Name</p>
                  <input type="text" name="name">
                <p>Location:</p>
                  <input type="text" name="location">
                <p>Wallet:</p>
                  <input type="text" name="wallet">
            </div>
          </div>
        </div>
        <% if(currentUser){ %>
            <div class="row">
                <form action="/<%=currentUser.username%>/profile/?_method=DELETE" method="POST" class="delete-form">
                    <button class="waves-effect waves-light btn red">Danger: Delete Profile</button>
                </form>
            </div>
            <div class="row">
                <form action="/<%=currentUser.username%>/update" method="GET" class="update-form">
                    <button class="waves-effect waves-light btn yellow">Update Username</button>
                </form>
        <% } %>
    </body>

