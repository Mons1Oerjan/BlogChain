<% include ../partials/header %>

<div class="container">
    <h1 class = "center-align" style="color: black;"> BLOGS</h1>
    <a class="waves-effect waves-light btn" href="/blogs/new">Add a new blog</a>
    <div class="row" style="margin-bottom:100px;">
        <% blogs.forEach(function(blog){ %>
        <div class="col s12 m2 l4">
            <div class="card">
                <div class="card-image">
                    <img src= "<%= blog.imageURL %> ">
                    <span class="card-title"><%= blog.name %></span>
                </div>
                <div class="card-content overFlow" style="color: black;">
                    <p><%= blog.content %></p>
                </div>
                <div class="card-action">
                    <a href="/blogs/<%= blog._id %>">Read More</a>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>
