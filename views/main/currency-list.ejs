<div class="container" >
	<h1 align="center">Currencies</h1>
	<a href="#" class="waves-effect waves-light btn" onclick="document.refreshPrices.submit();">
        <i class="material-icons left">trending_up</i>
        Refresh Prices
  </a>
</div>
<div>
		<div class="row" style="margin-bottom:100px;">
				<% prices.forEach(function(price){ %>
					<div class="col s12 m6 l4">
						<div class="card large" style="width: 100%;height: 55vw;object-fit: cover;">
							<div class="card-image">
								<img src = "<%= price.url %>">
								<spam class="card-title" style="color:black"> <%= price.pair %> </spam>
							</div>
							<div class="card-content" style="overflow: auto">
								<% price.exchanges.forEach(function(exchange){ %>
									<a href = "<%=exchange.url%>"> <%=exchange.exchange%></a>
									<p> Last: <%= exchange.last %> </p>
									<p> Highest: <%= exchange.highest %> </p>
									<p> Lowest: <%= exchange.lowest %> </p>
									<p> Volume: <%= exchange.volume %> </p>
									<hr>
									<% }); %>
						 	</div>
						</div>
					</div>
				<% }); %>
			</div>
		</div>
