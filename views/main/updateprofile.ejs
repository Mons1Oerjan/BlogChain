<% include ../partials/header %>
  
<div class="row">
    <h1 class="col s6 offset-s4">Change your Username</h1>
    <form class="col s6 offset-s4" action="/user/<%=currentUser.username%>/update/?_method=PUT" method="POST" enctype="multitype/form-data">
        <div class="input-field col s6">
            <input id="new_username" type="text" class="validate" name="new_username" placeholder="Please enter your new username here...">
            <label for="new_userName">New Username</label>
        </div>
        <div class="input-field col s3">
            <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                <i class="material-icons right">send</i>
            </button>
        </div>
    </form>
</div>

